<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">
    <TextView
        android:id="@+id/aboutcbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Coimbatore"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/cunia"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:id="@+id/abtcbe"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp"
        android:fontFamily="@font/dustismo"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutcbe"
        android:text="@string/cbe"/>
    <TextView
        android:id="@+id/aboutapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the App"
        android:textStyle="bold"
        android:layout_below="@id/abtcbe"
        android:textSize="18sp"
        android:fontFamily="@font/cunia"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:id="@+id/abtapp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp"
        android:fontFamily="@font/dustismo"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutapp"
        android:text="@string/abtapp"/>
    <Button
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:id="@+id/contactme"

        android:textColor="#263238"
        android:fontFamily="@font/cunia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send a Message"
        android:layout_below="@id/abtapp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="15sp"
        android:fontFamily="@font/dustismo"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactme"
        android:text="@string/disclaimer"/>

</RelativeLayout>
</ScrollView>